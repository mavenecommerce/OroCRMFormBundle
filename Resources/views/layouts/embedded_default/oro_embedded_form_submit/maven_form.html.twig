{% block fieldset_widget %}
    <div class="fieldset">
        <h2 class="legend">{{ title|block_text(translation_domain) }}</h2>
        <ul class="form-list">
            {{ block_widget(block) }}
        </ul>
    </div>
{% endblock %}

{% block form_field_widget %}
    <div class="col-xs-12 col-md-12">
        <div class="form-group" {% if form.vars.extra_field is defined and form.vars.extra_field %} id="{{ form.vars.id ~ '_holder' }}" {% endif %}>
            {{ form_row(form) }}
        </div>
    </div>
{% endblock %}

{% block form_widget %}
    <div class="page-title">
        <h1>{% trans %}Contact Us{% endtrans %}</h1>
    </div>

    {{ form_start(form, {'attr': {'id': form.vars.id, 'name': form.vars.name, 'novalidate': 'true',  'data-toggle':"validator", 'data-focus':"false" }}) }}
    <div class="row">
        {{ block_widget(block) }}
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block _embedded_form_comment_widget %}
    <li class="wide">
        {{ form_row(form) }}
    </li>
{% endblock %}

{% block _embedded_form_submit_widget %}
    <div class="buttons-set">
        <p class="required">{% trans %}maven.form.embedded_form.required_fields{% endtrans %}</p>
        {{ form_widget(form) }}
    </div>
{% endblock %}
